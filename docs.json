{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Plex Development",
  "colors": {
    "primary": "#7B68EE",
    "light": "#7B68EE",
    "dark": "#7B68EE"
  },
  "logo": {
    "light": "/logo/logo.svg",
    "dark": "/logo/logo.svg",
    "href": "https://plexdevelopment.net"
  },
  "favicon": "/favicon.svg",
  "thumbnails": {
    "appearance": "dark"
  },
  "styling": {
    "codeblocks": "dark",
    "eyebrows": "section"
  },
  "icons": {
    "library": "lucide"
  },
  "fonts": {
    "heading": {
      "family": "Geist Mono"
    }
  },
  "appearance": {
    "default": "dark",
    "strict": true
  },
  "background": {
    "decoration": "windows"
  },
  "navbar": {
    "links": [
      {
        "label": "Support - CHANGE ME",
        "href": "mailto:hi@mintlify.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Website",
      "href": "https://plexdevelopment.net"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "dropdowns": [
        {
          "dropdown": "Community Documentation",
          "href": "https://plex.amogusreal.tech",
          "icon": "users"
        },
        {
          "dropdown": "Official Documentation",
          "href": "https://docs.plexdevelopment.net",
          "icon": "book"
        }
      ],
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Community",
          "href": "https://mintlify.com/community",
          "icon": "slack"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "footer": {
    "socials": {
      "discord": "https://discord.gg/plexdev"
    },
    "links": [
      {
        "header": "Legal",
        "items": [
          {
            "href": "https://plexdevelopment.net/privacy-policy",
            "label": "Privacy Policy"
          },
          {
            "href": "https://plexdevelopment.net/tos",
            "label": "Terms of Service"
          }
        ]
      }
    ]
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude"
    ]
  },
  "integrations": {
    "telemetry": {
      "enabled": false
    }
  }
}